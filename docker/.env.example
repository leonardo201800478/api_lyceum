# ==============================================
# .env.example - TEMPLATE DE CONFIGURAÇÃO
# ==============================================
# Copie este arquivo para .env e preencha os valores

# Application
APP_NAME="API Lyceum Sync"
APP_VERSION="1.0.0"
DEBUG=True  # Mude para False em produção
ENVIRONMENT=development  # Mude para production em produção

# Server
HOST=0.0.0.0
PORT=8000
API_V1_STR=/api/v1
PROJECT_NAME="API Lyceum Sync"
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Database
POSTGRES_SERVER=db
POSTGRES_USER=lyceum_api_user
POSTGRES_PASSWORD=SUA_SENHA_FORTE_AQUI  # Gere uma senha forte
POSTGRES_DB=lyceum_production_db
POSTGRES_PORT=5432

# API Lyceum (OBRIGATÓRIO - peça ao administrador)
LYCEUM_API_BASE_URL=https://api.lyceum.com.br
LYCEUM_API_USERNAME=SEU_USUARIO_LYCEUM
LYCEUM_API_PASSWORD=SUA_SENHA_LYCEUM
LYCEUM_API_TIMEOUT=30
LYCEUM_API_PAGE_SIZE=100
LYCEUM_API_DELAY=0.1

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=SUA_SENHA_REDIS_AQUI  # Gere uma senha forte