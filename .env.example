# Application
APP_NAME="API Lyceum"
APP_VERSION="1.0.0"
DEBUG=False
ENVIRONMENT=production

# Server
HOST=0.0.0.0
PORT=8000
API_V1_STR=/api/v1
PROJECT_NAME="API Lyceum Sync"
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Database
POSTGRES_SERVER=db
POSTGRES_USER=lyceum_user
POSTGRES_PASSWORD=lyceum_password
POSTGRES_DB=lyceum_db
DATABASE_URL=postgresql://lyceum_user:lyceum_password@db:5432/lyceum_db
SYNC_DATABASE_URL=postgresql+psycopg2://lyceum_user:lyceum_password@db:5432/lyceum_db

# API Lyceum
LYCEUM_API_BASE_URL=https://api.lyceum.com.br
LYCEUM_API_USERNAME=your_username
LYCEUM_API_PASSWORD=your_password
LYCEUM_API_TIMEOUT=30
LYCEUM_API_PAGE_SIZE=100
LYCEUM_API_DELAY=0.1

# Redis
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100